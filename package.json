{
  "name": "react-demo",
  "version": "1.0.0",
  "main": "src/index.js",
  "keywords": [
    "react",
    "typescript",
    "webpack",
    "webpack5"
  ],
  "license": "MIT",
  "author": "dedoyle <dedoyle@163.com>",
  "scripts": {
    "start": "webpack serve --env development",
    "dev": "webpack --env development",
    "build": "webpack --env production",
    "vendor": "webpack --config ./vendor.config.js"
  },
  "presets": [
    "babel-preset-react-app"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "parser": "babel-eslint",
    "extends": [
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "dist",
    "node_modules",
    "babel.config.js"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.12.13",
    "@babel/plugin-proposal-decorators": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.15",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@svgr/webpack": "^5.5.0",
    "@umijs/babel-plugin-auto-css-modules": "^3.3.7",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-preset-react-app": "^10.0.0",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^7.1.2",
    "core-js": "3",
    "css-loader": "^5.0.1",
    "eslint": "^7.19.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^2.4.3",
    "html-webpack-plugin": "^5.0.0",
    "less": "^4.1.1",
    "less-loader": "^8.0.0",
    "mini-css-extract-plugin": "^1.3.5",
    "mobx": "^6.1.5",
    "postcss": "^8.2.4",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^5.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-refresh": "^0.9.0",
    "react-router-dom": "^5.2.0",
    "style-loader": "^2.0.0",
    "webpack": "^5.20.1",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "peerDependencies": {
    "postcss": "^8.2.4"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "crlf",
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "options": {
          "parser": "typescript"
        }
      },
      {
        "files": [
          "*.tsx"
        ],
        "options": {
          "parser": "typescript",
          "jsxBracketSameLine": false,
          "jsxSingleQuote": false
        }
      },
      {
        "files": [
          "*.scss"
        ],
        "options": {
          "parser": "scss"
        }
      },
      {
        "files": [
          "*.json"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  }
}